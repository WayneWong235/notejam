pipeline {
	agent any
	tools { 
		nodejs "nodejs10.x"
		docker "default-docker" 
	}
	
	stages {
		stage('Trigger') {
			steps {
				echo "trigger"
			}
		}

		stage('Build') {
			steps {
                sh 'npm config ls'
				sh '''
					cd express/notejam
					npm install
					docker version
				'''
			}
		}

		stage('Test') {
			steps {
				echo "test"
			}
		}
	
		stage('Push') {
			steps {
				echo "push"
			}
		}
	}
}