pipeline {
	agent any
	tools { nodejs "nodejs10.x" }
	
	stages {
		stage('Install') {
			steps {
                sh 'npm config ls'
				sh '''
					cd express/notejam
					npm install
				'''
			}
		}

		stage('Build') {
			when { branch 'master' }
			steps { 
				sh '''
					cd express/notejam
					ls -l
					docker build -t waynewong/express:${BUILD_NUMBER} .
				'''
			}
		}

		stage('Test') {
			steps { 
				sh '''
					cd express/notejam
					./node_modules/mocha/bin/mocha tests
				'''
			}
		}

		stage('Push') {
			when { branch 'master' }
			steps {
				withDockerRegistry([ credentialsId: "dockerhub", url: "" ]) {
					sh 'docker push waynewong/express:${BUILD_NUMBER}'
				}
			}
		}
	}
}